<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="570.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="ImageView" fitHeight="250.0" fitWidth="250.0" layoutX="300.0" layoutY="20.0"
                 pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@graphics/csrc.png" />
         </image>
      </ImageView>
      <Label fx:id="Title" layoutX="20.0" layoutY="20.0" text="Cloud Security Rubik's Cube">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Button fx:id="btnCapabilities" layoutX="20.0" layoutY="52.0" mnemonicParsing="false"
              onAction="#btnCapabilitiesClicked" prefHeight="48.0" prefWidth="250.0"
              text="Select cloud functional capabilities and list associated security controls"
              textAlignment="CENTER" wrapText="true" />
      <Button fx:id="btnControls" layoutX="20.0" layoutY="112.0" mnemonicParsing="false"
              onAction="#btnControlsClicked" prefHeight="48.0" prefWidth="250.0"
              text="Select security controls to display associated functional capabilities"
              textAlignment="CENTER" wrapText="true" />
      <Button fx:id="btnBaselines" layoutX="20.0" layoutY="174.0" mnemonicParsing="false"
              onAction="#btnBaselinesClicked" prefHeight="48.0" prefWidth="250.0"
              text="Select cloud functional capabilities and display NIST and FedRAMP baselines"
              textAlignment="CENTER" wrapText="true" />
      <Button fx:id="btnTic" layoutX="20.0" layoutY="235.0" mnemonicParsing="false"
              onAction="#btnTicClicked" prefHeight="48.0" prefWidth="250.0"
              text="Display TIC capabilities and associated functional capabilities"
              textAlignment="CENTER" wrapText="true" />
      <Button fx:id="btnVisualization" layoutX="20.0" layoutY="338.0" mnemonicParsing="false"
              onAction="#btnVisualizationClicked" prefHeight="48.0" prefWidth="250.0" text="Visualizations" />
      <Button fx:id="btnUpdate" layoutX="300.0" layoutY="338.0" mnemonicParsing="false"
              onAction="#btnUpdateClicked" prefHeight="48.0" prefWidth="250.0" text="Update database" />
   </children>
</AnchorPane>
