<Window x:Class="Excel2DB.ControlOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Order" Height="300" Width="700">
    <Canvas Name="root">
        <Button Content="Done" Canvas.Left="22" Canvas.Top="19" Width="75" Click="Done"/>
        <Button Content="Cancel" Canvas.Left="115" Canvas.Top="19" Width="75" IsCancel="True"/>
        <ScrollViewer Height="175" Width="589" Canvas.Left="50" Canvas.Top="61" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ListView Name="box"/>
        </ScrollViewer>
        <Label Content="Enter the first row of data:" Canvas.Left="273" Canvas.Top="19"/>
        <TextBox Height="26" Canvas.Left="421" TextWrapping="Wrap" Canvas.Top="25" Width="128" Name="row"/>
    </Canvas>

</Window>
