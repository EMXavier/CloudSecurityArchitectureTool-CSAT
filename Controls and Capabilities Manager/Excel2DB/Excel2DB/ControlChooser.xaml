<Window x:Class="Excel2DB.ControlChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Chooser" Height="359.16" Width="516.352">

    <Grid Margin="0,0,-8,0">
        <ListBox Name="CtrlListBox" HorizontalAlignment="Left" Height="180" Margin="10,73,0,0" VerticalAlignment="Top" Width="213" ClipToBounds="True" SelectionChanged="CtrlListBox_SelectionChanged">
            
        </ListBox>

        <ListBox Name="SpecListBox" HorizontalAlignment="Left" Height="180" Margin="277,73,0,0" VerticalAlignment="Top" Width="213" SelectionMode="Multiple" ClipToBounds="True">

        </ListBox>
        <Button Name="DoneBtn" Content="Done" HorizontalAlignment="Left" Margin="326,281,0,0" VerticalAlignment="Top" Width="75" Click="DoneBtn_Click"/>
        <Button Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="415,281,0,0" VerticalAlignment="Top" Width="75" Click="CancelBtn_Click_1"/>
        <TextBox Height="41" Margin="10,10,26,0" TextWrapping="Wrap" Text="Select the controls that you want to include in the reports..." VerticalAlignment="Top" BorderThickness="0"/>
        <Button Name="SelectBtn" Content="Select all" HorizontalAlignment="Left" Margin="80,281,0,0" VerticalAlignment="Top" Width="75" Click="SelectBtn_Click"/>

    </Grid>
</Window>
