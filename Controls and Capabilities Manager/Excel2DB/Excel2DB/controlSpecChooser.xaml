        <Button Content="Select All" HorizontalAlignment="Left" Height="32" Margin="344,107,0,0" VerticalAlignment="Top" Width="78" Click="SelectAll"/>
        <Button Content="Remove one" HorizontalAlignment="Left" Height="32" Margin="344,210,0,0" VerticalAlignment="Top" Width="78" Click="RemoveOne"/>
        <Button Content="Remove All" HorizontalAlignment="Left" Height="32" Margin="344,258,0,0" VerticalAlignment="Top" Width="78" Click="RemoveAll"/>
        <Button Content="Add Selected" HorizontalAlignment="Left" Height="28" Margin="344,159,0,0" VerticalAlignment="Top" Width="78" Click="AddOne"/>
    </Grid>
</Window>
