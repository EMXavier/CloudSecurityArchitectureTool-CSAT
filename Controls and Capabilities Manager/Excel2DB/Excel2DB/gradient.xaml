<Window x:Class="Excel2DB.gradient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="gradient" Height="300" Width="300">
    <Grid>
        <Rectangle Width="200" Height="100" Margin="46,92,46,78" >
            
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                    <GradientStop Color="Red" Offset="0" />
                    <GradientStop Color="Red" Offset="0.1" />
                    <GradientStop Color="Blue" Offset="0.2" />
                    <GradientStop Color="Orange" Offset="0.3" />
                    <GradientStop Color="Yellow" Offset="0.4" />
                    <GradientStop Color="Green" Offset="0.5" />
                    <GradientStop Color="Gray" Offset="0.6" />
                    <GradientStop Color="Brown" Offset="0.7" />
                    <GradientStop Color="Purple" Offset="0.8" />
                    <GradientStop Color="Violet" Offset="0.9" />
                    <GradientStop Color="SkyBlue" Offset="0.95" />
                    <GradientStop Color="Red" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock HorizontalAlignment="Left" Margin="119,122,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
